a[2]= 17
print(a)

#create a list with items of different type
a=[ 12,"CFB", False, 2.0]
print(a)
#list slicing
friends= ["rohan","samm","priya",13]
print(friends[0:3]) 

#list methods
# sort
a.sort()
print(a)
#reverse
a.reverse()
print(a)
#appened
a.append(12)
print(a)
#insert
a.insert(3,29)
print(a)
#pop
a.pop(2)
print(a)
#remove
a.remove(56)
print(a)
#tuples in python
t=(1,3,5,4)
print(t[2])
#tuple methods
print(t.count(3))
print(t.index(1))

